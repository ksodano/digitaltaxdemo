      font-size: 20px !important;
      z-index: 999;
      border: 4px dashed red;
      border-radius: 10px;
      padding: 2px;
      font-weight: bold;

    }
    .box {
      border: 10px dashed green;
      z-index: 4;
      background: transparent !important;
    }
    .word {
