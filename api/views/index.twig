{% extends 'layout.twig' %}

{% block body %}

  <div style="display: inline-block">
    <div id="container"></div>
    <img src="/data/{{ file }}" />
  </div>
  <div style="display: inline-block">
    <img src="/data/{{ file }}" />
  </div>

  <script type="module" src="/javascripts/loader.js"></script>
  <style>
    #container div {
      position: absolute;
      display: inline-block;
      background: white;
    }
    [data-confidence="0"],
    [data-confidence="1"],
    [data-confidence="2"] {
      border-bottom: 3px solid red;
    }
    [data-confidence="3"],
    [data-confidence="4"],
    [data-confidence="5"] {
      border-bottom: 1px solid yellow;
    }
    [data-confidence="6"],
    [data-confidence="7"],
    [data-confidence="8"] {
      border-bottom: 1px solid greenyellow;
    }
    [data-confidence="9"],
    [data-confidence="10"] {
      border-bottom: 1px solid green;
    }
